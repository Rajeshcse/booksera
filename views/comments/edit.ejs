<% include ../partials/header %>

<form class="container" action="/campgrounds/<%= campground_id %>/comments/<%= comment._id%>?_method=PUT " method="POST" >
    
    <div style="width:30%; margin:0 auto" class="row">
        <h3>Edit Comment</h3>
        <div class="form-group">
            <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">
        </div>
        
        <div class="form-group">
            <input class="btn btn-default btn-primary" type="submit">
        </div>
        <a href="/campgrounds">Go Back</a>
    </div>
    
</form>
